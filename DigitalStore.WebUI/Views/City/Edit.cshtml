@using DigitalStore.Models
@model City

@{
    Layout = "../Shared/_PersonLayout";
}

<div class="container p-3">
    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Edit City</h2>
                <hr/>
            </div>
            <input type="hidden" asp-for="Timestamp"/>
            <div class="mb-3">
                <label asp-for="Id"></label>
                <input asp-for="Id" class="form-contorl" readonly/>
            </div>
            <div class="mb-3">
                <label asp-for="CityName"></label>
                <input asp-for="CityName" class="form-contorl" />
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px">
                Update
            </button>
            <a asp-controller="City" asp-action="CityList" class="btn btn-secondary" style="width:150px">
                Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}