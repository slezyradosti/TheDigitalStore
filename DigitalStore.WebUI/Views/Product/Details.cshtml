@using DigitalStore.Models
@model Product

 <div class="item p-3">
    <div class="oneItem">
        <div class="forPrice">
            @*Сюда еще добавить изображение*@
            @Model.ProductPrice.ToString("# $")
        </div>
        <div class="forName">  
            <h3>
                <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id" class="link page-link">@Model.ProductName</a>
            </h3>                  
        </div>
        <p>@Model.ProductDescription</p>
        <a asp-controller="Product" asp-action="Buy" asp-route-id="@Model.Id" class="btn btn-primary" style="width:125px">
            Buy
        </a>
        <a asp-controller="Product" asp-action="Index" asp-route-id="@Model.CategoryId" class="btn btn-secondary" style="width:125px">
            Back to List
        </a>
    </div>     
 </div>

