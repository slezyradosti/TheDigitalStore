@using DigitalStore.Models
@using DigitalStore.WebUI.ExtensionClasses
@using ReflectionIT.Mvc.Paging
@model ReflectionIT.Mvc.Paging.PagingList<Product>
@addTagHelper *, ReflectionIT.Mvc.Paging

@{
    Layout = "../Shared/_PersonLayout";
}

<nav class="pagination">
    <vc:pager paging-list="@Model"/>
</nav>

<div class="container p-3">
<table class="table table-bordered table-striped" style="width:100%">
	<div class="col-12 text-end">
			<a asp-controller="Product" asp-action="Create" class="btn btn-primary" style="width:100px">
				<i class="bi bi-plus-square"></i> &nbsp; Create
			</a>
	</div>
	<thead>
		<tr>
			<th>
				Id
			</th>
			<th>
				Product Name
			</th>
			<th>
				Product Price
			</th>
			<th>
				Product Description
			</th>
			<th>
				Product Image
			</th>
			<th>
				Category Name
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model)
		{
			<tr>
				<td width="5%">
					@obj.Id
				</td>
				<td width="10%">
					@obj.ProductName
				</td>
				<td width="8%">
					@obj.ProductPrice $
				</td>
				<td width="20%">
					@obj.ProductDescription
				</td>
				<td width="15%">
					<img src="@ImageConvertor.ConvetrByteArrayToString(obj.ProductImage)" style="max-width: 150px; max-height: 120px"/>
				</td>
				<td width="10%">
					@obj.Category.CategoryName
				</td>
				<td>
					<div class="w-100 btn-group" role="group">
						<a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2" style="width:50px">
							<i class="bi bi-pencil"></i>Edit</a>
							<a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2" style="width:50px">
							Delete</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>
</div>

<nav class="pagination">
    <vc:pager paging-list="@Model"/>
</nav>