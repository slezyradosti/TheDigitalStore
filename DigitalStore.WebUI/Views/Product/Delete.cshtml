@using DigitalStore.Models
@model Product

@{
    Layout = "../Shared/_PersonLayout";
}

<div class="container p-3">
    <div class="row pb-2">
          <h2 class="text-primary">Delete Category</h2>
          <hr/>
    </div>
    <form method="post">
        <div class="border p-3 mt-4">
            <input type="hidden" asp-for="Timestamp"/>
            <div class="mb-3">
                <label asp-for="Id"></label>
                <br/>
                <input asp-for="Id" class="form-contorl" readonly/>
            </div>
            <div class="mb-3">
            <p></><label asp-for="ProductName"></label></p>
            <input asp-for="ProductName" class="form-contorl" readonly/>
        </div>
        <div class="mb-3">
            <p><label asp-for="ProductPrice"></label></p>
            <input asp-for="ProductPrice" class="form-contorl" readonly/>
        </div>
        <div class="mb-3">
            <p><label asp-for="ProductDescription"></label></p>
            <input asp-for="ProductDescription" class="form-contorl" readonly/>
        </div>
         <div class="form-group">
               <label asp-for="Category.CategoryName"></label>
               <select asp-for="CategoryId" asp-items="ViewBag.categories" class = "form-control" readonly></select>        
         </div>
            <button type="submit" class="btn btn-primary" style="width:150px">
                Delete
            </button>
            <br />
            <a asp-controller="Product" asp-action="ProductList" class="btn btn-secondary" style="width:150px">
                Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}