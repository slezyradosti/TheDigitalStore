@using DigitalStore.Models
@using DigitalStore.WebUI.ExtensionClasses
@model Product

@{
    Layout = "../Shared/_PersonLayout";
}

<div class="container p-3">
    <form method="post" enctype="multipart/form-data">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Edit Product</h2>
                <hr/>
            </div>
            <input type="hidden" asp-for="Timestamp"/>
            <div class="mb-3">
                <label asp-for="Id"></label>
                <br/>
                <input asp-for="Id" class="form-contorl" readonly/>
            </div>
            <div class="mb-3">
            <p></><label asp-for="ProductName"></label></p>
            <input asp-for="ProductName" class="form-contorl" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <p><label asp-for="ProductPrice"></label></p>
                <input asp-for="ProductPrice" class="form-contorl" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <p><label asp-for="ProductDescription"></label></p>
                <input asp-for="ProductDescription" class="form-contorl" />
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
             <div class="form-group">
                   <label asp-for="Category.CategoryName"></label>
                   <select asp-for="CategoryId" asp-items="ViewBag.categories" class = "form-control"></select>        
             </div>
             <br />
             <img src="@ImageConvertor.ConvetrByteArrayToString(Model.ProductImage)" style="max-width: 650px; max-height: 450px"/>
             <div class="mb-3">
                  <p><label asp-for="ProductImage"></label></p>
                   <input asp-for="ProductImage" type="file" name="image" accept="image/*" class="form-contorl" />
             </div>
            <button type="submit" class="btn btn-primary" style="width:150px">
                Update
            </button>
            <a asp-controller="Product" asp-action="ProductList" class="btn btn-secondary" style="width:150px">
                Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}