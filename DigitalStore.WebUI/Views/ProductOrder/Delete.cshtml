@using DigitalStore.Models
@model ProductOrder

@{
    Layout = "../Shared/_PersonLayout";
}

<div class="container p-3">
    <div class="row pb-2">
          <h2 class="text-primary">Delete ProductOrder</h2>
          <hr/>
    </div>
    <form method="post">
        <div class="border p-3 mt-4">
            <input type="hidden" asp-for="Timestamp"/>
            <div class="mb-3">
                <label asp-for="Id"></label>
                 <br />
                <input asp-for="Id" class="form-contorl" readonly/>
             <div class="form-group">
                   <label asp-for="Product.ProductName"></label>
                   <select asp-for="ProductId" asp-items="ViewBag.products" class ="form-control" readonly></select>        
             </div>
             <div class="form-group">
                   <label asp-for="OrderId"></label>
                   <select asp-for="OrderId" asp-items="ViewBag.orders" class ="form-control" readonly></select>        
             </div>
              <br />
            <button type="submit" class="btn btn-primary" style="width:150px">
                Delete
            </button>
            <a asp-controller="ProductOrder" asp-action="ProductOrderList" class="btn btn-secondary" style="width:150px">
                Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}