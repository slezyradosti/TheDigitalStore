@using DigitalStore.Models.NotForDB
@model ShippingDetails

@{
    ViewData["Title"] = "Checkout";
}

<h2>Place your order now</h2>
<p>Please enter your contact information</p>

<form method="post">
    <h3>Data</h3>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <h3>Shipping address</h3>
    <div class="form-group">
        <label asp-for="AddressLine1"></label>
        <input asp-for="AddressLine1" class = "form-control" />
        <span asp-validation-for="AddressLine1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AddressLine2"></label>
        <input asp-for="AddressLine2" class = "form-control" />
        <span asp-validation-for="AddressLine2" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AddressLine3"></label>
        <input asp-for="AddressLine3" class = "form-control" />
        <span asp-validation-for="AddressLine3" class="text-danger"></span>
    </div>
    <div class="form-group">
       <label asp-for="City"></label>
        <input asp-for="City" class = "form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Country"></label>
        <input asp-for="Country" class = "form-control" />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>

    <h3>Options</h3>
    <div class="checkbox">
        <label>
            @*@Html.EditorFor(x => x.GiftWrap)*@
            <input asp-for="GiftWrap" />
            Use gift wrap?
        </label>
    </div>

    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Process the order" />
    </div>
</form>

@*standard data validation will be done client-side, not server-side*@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}