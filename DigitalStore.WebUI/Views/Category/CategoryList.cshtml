@using DigitalStore.Models
@model ReflectionIT.Mvc.Paging.PagingList<Category>
@using ReflectionIT.Mvc.Paging
@addTagHelper *, ReflectionIT.Mvc.Paging

@{
    Layout = "../Shared/_PersonLayout";
}

@{
	//Html.RenderPartial("../Person/_SideMenuPartialView");
}

<nav class="pagination">
    <vc:pager paging-list="@Model"/>
</nav>

<div class="container p-3">
<table class="table table-bordered table-striped" style="width:100%">
	<div class="col-12 text-end">
			<a asp-controller="Category" asp-action="Create" class="btn btn-primary" style="width:100px">
				<i class="bi bi-plus-square"></i> &nbsp; Create
			</a>
	</div>
	<thead>
		<tr>
			<th>
				Id
			</th>
			<th>
				Category Name
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model)
		{
			<tr>
				<td width="10%">
					@obj.Id
				</td>
				<td width="60%">
					@obj.CategoryName
				</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2" style="width:20px">
							<i class="bi bi-pencil"></i>Edit</a>
							<a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2" style="width:20px">
							Delete</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>
</div>

<nav class="pagination">
    <vc:pager paging-list="@Model" action="CategoryList"/>
</nav>

@section scripts
{
    <script src=
        "https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js">
    </script>
}