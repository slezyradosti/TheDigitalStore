@using DigitalStore.Models
@using DigitalStore.Repos

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/pager.css"/>
    <link rel="stylesheet" href="~/css/DarkTheme.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sideMenu.css"/>
    <link rel="stylesheet" href="~/css/NewDesign.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
</head>
<body>
    <header>
       <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <span style="font-size: 30px; cursor: pointer" onclick="openNavmenu()"><i class="bi bi-list">Menu</i></span>  
                <a class="nav-link text-dark" id="cartId" asp-area="" asp-controller="Home" asp-action="Index">
                     Home
                </a>
            </div>
        </div>
    </nav>
    <div class="sidenavmenu" id="adminSidenavnemu">
        <a class="closebtn" href="#" onclick="closeNavmenu()">X</a>
        <br />
        <a asp-controller="Category" asp-action="CategoryList" class="btn" style="width:220px">
            Categories
        </a>
        <a asp-controller="City" asp-action="CityList" class="btn" style="width:220px">
            Cities
        </a>
        <a asp-controller="Customer" asp-action="CustomerList" class="btn" style="width:220px">
            Customers
        </a>
        <a asp-controller="Order" asp-action="OrderList" class="btn" style="width:220px">
            Orders
        </a>
        <a asp-controller="Product" asp-action="ProductList" class="btn" style="width:220px">
            Products
        </a>
        <a asp-controller="ProductOrder" asp-action="ProductOrderList" class="btn" style="width:220px">
            ProductOrders
        </a>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - DigitalStore
        </div>
    </footer>

    <script type="text/javascript" src="~/js/sideMenu.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
