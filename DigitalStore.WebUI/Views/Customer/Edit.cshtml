@using DigitalStore.Models
@using DigitalStore.WebUI.ExtensionClasses
@model Customer

@{
    Layout = "../Shared/_PersonLayout";
}

<div class="container p-3">
    <form method="post" enctype="multipart/form-data">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Edit Customer</h2>
                <hr/>
            </div>
            <input type="hidden" asp-for="Timestamp"/>
            <div class="mb-3">
                <label asp-for="Id"></label>
                <br/>
                <input asp-for="Id" class="form-contorl" readonly/>
            <div class="mb-3">
                <p></><label asp-for="FirstName"></label></p>
                <input asp-for="FirstName" class="form-contorl" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <p><label asp-for="LastName"></label></p>
                <input asp-for="LastName" class="form-contorl" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <p><label asp-for="MidName"></label></p>
                <input asp-for="MidName" class="form-contorl" />
                <span asp-validation-for="MidName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <p><label asp-for="PhoneNumber"></label></p>
                <input asp-for="PhoneNumber" class="form-contorl" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <p><label asp-for="Email"></label></p>
                <input asp-for="Email" class="form-contorl" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
             <div class="form-group">
                   <label asp-for="City.CityName"></label>
                   <select asp-for="CityId" asp-items="ViewBag.cities" class ="form-control"></select>        
             </div>
              <br />
            <button type="submit" class="btn btn-primary" style="width:150px">
                Update
            </button>
            <a asp-controller="Customer" asp-action="CustomerList" class="btn btn-secondary" style="width:150px">
                Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}