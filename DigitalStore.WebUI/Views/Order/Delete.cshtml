@using DigitalStore.Models
@model Order

@{
    Layout = "../Shared/_PersonLayout";
}

<div class="container p-3">
    <div class="row pb-2">
          <h2 class="text-primary">Delete Order</h2>
          <hr/>
    </div>
    <form method="post">
        <div class="border p-3 mt-4">
            <input type="hidden" asp-for="Timestamp"/>
            <div class="mb-3">
                <label asp-for="Id"></label>
                <br/>
                <input asp-for="Id" class="form-contorl" readonly/>
            </div>
            <div class="mb-3">
            <p></><label asp-for="OrderDate"></label></p>
            <input asp-for="OrderDate" class="form-contorl" readonly/>
            </div>
            <div class="mb-3">
                <p><label asp-for="DeliveryDate"></label></p>
                <input asp-for="DeliveryDate" class="form-contorl" readonly/>
            </div>
            <div class="form-group">
                   <label asp-for="Customer.LastName"></label>
                   <select asp-for="CustomerId" asp-items="ViewBag.customers" class = "form-control" readonly></select>        
             </div>
             <div class="form-group">
                   <label asp-for="City.CityName"></label>
                   <select asp-for="CityId" asp-items="ViewBag.cities" class = "form-control" readonly></select>        
             </div>
            <button type="submit" class="btn btn-primary" style="width:150px">
                Delete
            </button>
            <a asp-controller="Order" asp-action="OrderList" class="btn btn-secondary" style="width:150px">
                Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}